 <div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
            <h1> <strong> <u>Eat This Burger  </u> </strong>  </strong> </h1>
 	         <img src="assets/css/img/burger.png" alt="chicken">
	        <p></p>
	    </div>
  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers Available To Eat!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers You Have Been Eaten!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="center col-sm-12">
			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <h2>Enter a burger you want to eat and click submit.</h2>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			   <button class="btn-primary" type="submit">  Submit Order </button>  
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>